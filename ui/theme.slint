// Color Palette
export global Theme {
    // Brand colors
    out property <color> brand_primary: #cc3015;
    out property <color> brand_secondary: #ff694f;
    out property <color> brand_accent: #ff4c29;
    out property <color> brand_soft: #ffe0d9;
    
    // Background colors - using warm theme colors
    out property <color> bg_primary: #fff5f2;
    out property <color> bg_alt: #ffebe6;
    out property <color> bg_elevated: #ffd9d0;
    out property <color> bg_soft: #fff0eb;
    
    // UI element colors
    out property <color> nav_background: #ffebe6;
    out property <color> nav_border: #ffd9d0;
    out property <color> list_selected: #ffe0d9;
    out property <color> list_selected_inactive: #d3d3d3;
    out property <color> list_background: white;
    out property <color> toolbar_background: #fff0eb;
    out property <color> text_primary: #333;
    out property <color> text_secondary: #666;
    out property <color> text_on_brand: white;
}

// Layout Constants
export global Layout {
    out property <length> nav_width: 50px;
    out property <length> separator_width: 1px;
    out property <length> toolbar_height: 50px;
    out property <length> list_item_height: 40px;
    out property <length> standard_padding: 10px;
    out property <length> standard_spacing: 5px;
    out property <length> row_height: 60px;
    
    // CrudList component spacing
    out property <length> crud_list_padding: 12px;           // Outer padding
    out property <length> crud_list_item_spacing: 8px;       // Space between items
    out property <length> crud_list_item_padding: 12px;      // Padding inside each item
    out property <length> crud_list_toolbar_spacing: 12px;   // Space between toolbar and list
}
