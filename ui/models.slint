// ============================================================================
// UI Data Models for FondsPod
// ============================================================================

// Archive library item
export struct ArchiveLibraryItem {
    name: string,
    path: string,
}

// Series item for home page
export struct SeriesItem {
    series_no: string,
    name: string,
    fond_no: string,
}

// File item for home page
export struct FileItem {
    file_no: string,
    name: string,
    series_no: string,
}

// Item item for home page
export struct ItemItem {
    item_no: string,
    name: string,
    file_no: string,
    path: string,
}

// Schema option for add fonds dialog
export struct SchemaOption {
    id: int,
    schema_no: string,
    name: string,
    selected: bool,
}

// Classification option for add fonds dialog
export struct ClassificationOption {
    id: int,
    code: string,
    name: string,
}

// Fonds schema option for transfer box
export struct FondsSchemaOption {
    id: int,
    schema_no: string,
    name: string,
}

// ============================================================================
// Generic CRUD List Data Structures
// ============================================================================

// Generic list item for CrudList component
export struct CrudListItem {
    id: int,            // Database ID for backend operations
    title: string,
    subtitle: string,
    active: bool,       // Whether item is active/enabled
}

// Row style for CrudList item formatting
export struct CrudListRowStyle {
    title_color: color,
    subtitle_color: color,
    background_color: color,
    opacity: float,
}

// Quick action button definition
export struct QuickAction {
    icon: string,
    tooltip: string,
}

// Context menu item definition
export struct ContextMenuItem {
    text: string,
    icon: string,
    is_danger: bool,
    show_separator_before: bool,
}

// ============================================================================
// Dialog Field Configuration
// ============================================================================

// Dialog field types
export enum DialogFieldType {
    text,
    path,
    select,
}

// Dialog field definition
export struct DialogField {
    label: string,
    field_type: DialogFieldType,
    value: string,
    placeholder: string,
}

// Fond page view model
export struct FondPageViewModel {
    items: [CrudListItem],
}