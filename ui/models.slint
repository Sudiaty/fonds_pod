// ============================================================================
// UI Data Models for FondsPod
// ============================================================================

// Archive library item
export struct ArchiveLibraryItem {
    name: string,
    path: string,
}

// ============================================================================
// Generic CRUD List Data Structures
// ============================================================================

// Generic list item for CrudList component
export struct CrudListItem {
    id: int,            // Database ID for backend operations
    title: string,
    subtitle: string,
    active: bool,       // Whether item is active/enabled
}

// Row style for CrudList item formatting
export struct CrudListRowStyle {
    title_color: color,
    subtitle_color: color,
    background_color: color,
    opacity: float,
}

// Quick action button definition
export struct QuickAction {
    icon: string,
    tooltip: string,
}

// Context menu item definition
export struct ContextMenuItem {
    text: string,
    icon: string,
    is_danger: bool,
    show_separator_before: bool,
}

// ============================================================================
// Dialog Field Configuration
// ============================================================================

// Dialog field types
export enum DialogFieldType {
    text,
    path,
    select,
}

// Dialog field definition
export struct DialogField {
    label: string,
    field_type: DialogFieldType,
    value: string,
    placeholder: string,
}